<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rocky.userdefined.MainActivity">
    <Button
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
         android:text="scale animation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/btn_animation"
        android:id="@+id/btn_list"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/btn_list"
        android:id="@+id/btn_point"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="#ff00ff"
        android:text="Hello World!"
        android:layout_centerInParent="true"
        />
    <com.example.rocky.userdefined.list.MyPointView
        android:id="@+id/my_point_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_list"
        />
</RelativeLayout>
